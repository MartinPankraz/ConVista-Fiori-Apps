<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:model="sap.ui.model"
	controllerName="convista.com.arp.demo.controller.schedulingOverview" xmlns:html="http://www.w3.org/1999/xhtml">
	<Panel
	    width="100%"
	    height="100%"
	    class="ccPanelBG">
    	<content>
			<Table id="idSchedulingTable"
				items="{path:'/schedSet' }"
				height="100%">
				<headerToolbar>
					<Toolbar>
						<Title text="Scheduled Reports" level="H6"/>
						<ToolbarSpacer></ToolbarSpacer>
						<Button tooltip="Refresh" icon="sap-icon://refresh" press="handleRefreshButtonPressed"/>
						<Button tooltip="View Settings" icon="sap-icon://drop-down-list" press="handleViewSettingsDialogButtonPressed"/>
					</Toolbar>
				</headerToolbar>
				<infoToolbar>
					<Toolbar
						id="vsdFilterBar"
						active="true"
						visible="false"
						press="[handleViewSettingsDialogFilterBarPressed, views.control.tableViewSettingsDialog]">
						<Label id="vsdFilterLabel" text="?" />
					</Toolbar>
				</infoToolbar>
				<columns>
					<Column width="18em"><Text text="Report" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" sortProperty="SchedObjName"><Text text="Date" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" sortProperty="SchedDate"><Text text="Next Run" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Status" /></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{SchedObjName}" text="{Jobname}" />
							<Text text="{
								path:'SchedDate',
								type: 'sap.ui.model.type.DateTime',
						        formatOptions: {
    								style: 'long'
						        },
						        relative: true
							}"/>
							<Text text="{
								parts: [{path:'JobDate',type: 'sap.ui.model.type.Date'}],
						        formatOptions: {
    								style: 'long'
						        }
							}"/>
							<core:Icon
								src="{
									path:'SchedStatus',
									formatter:'.formatStatusIcon'
								}"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
  		</content>
	</Panel>
</mvc:View>