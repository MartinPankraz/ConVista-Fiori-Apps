<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:model="sap.ui.model"
	controllerName="convista.com.arp.demo.controller.schedulingOverview" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:semantic="sap.m.semantic"
	xmlns:form="sap.ui.layout.form"
	class="sapUiSizeCompact">
	<Page
      id="pageSchedulingOverview"
      class="html_container"
      showHeader="false">
      <content>
	
	
		<Panel expandable="true" expanded="true" headerText="Job Settings" width="auto" class="ccPanelBG">
			<content>
				<!-- Beginning of first Form -->
				<form:Form  editable="true">
					<form:layout>
                    <form:ResponsiveGridLayout 
                    	visible="true" 
                		labelSpanL="3" 
                		labelSpanM="4" 
                		labelSpanS="5" 
                		emptySpanL="3" 
                		emptySpanM="0" 
                		emptySpanS="0" 
                		columnsL="3" 
                		columnsM="1" 
                		columnsS="1" 
                		breakpointL="800" 
                		breakpointM="400">
                    </form:ResponsiveGridLayout>
                </form:layout>
                
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="Report Group">
                                <form:fields>
									<Select
										id="reportGroupSelection"
										forceSelection="true"
										selectedKey="none"
										change="groupSelectionChanged"
										items="{
											path: '/entries'
										}">
										<core:Item key="{groupKey}" text="{groupDesc}" />
									</Select>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Single Reports">
                                <form:fields>
									<MultiComboBox
										id="reportSelection"
										forceSelection="true"
										selectedKey="none"
										items="{
											path: '/entries'
										}">
										<core:Item key="{query}" text="{descr}" />
									</MultiComboBox>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="First Start Date">
                                <form:fields>
                                    <DatePicker id="firstStartDate" valueFormat="yyyyMMdd" displayFormat="d MMM y"/>
									<CheckBox id="immediate" text="Immediately" select="immediateSelect" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Start time">
                                <form:fields>
                                    <TimePicker
                                    	id="firstStartTime"
										value="00:00"
										valueFormat="HH:mm"
										displayFormat="HH:mm"
										placeholder="Enter job start time"/>
									<CheckBox id="zip" text="ZIP report set" />
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="Execution Rule">
                                <form:fields>
                                    <Select
                                    	id="execRule"
										forceSelection="false"
										selectedKey="N">
                                    	<items>
											<core:Item key="N" text="{i18n>sapSchedOnce}" />
											<core:Item key="D" text="{i18n>sapSchedDaily}" />
											<core:Item key="W" text="{i18n>sapSchedWeekly}" />
											<core:Item key="M" text="{i18n>sapSchedMonthly}" />
                                    	</items>
									</Select>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Restriction (NWD)">
                                <form:fields>
                                    <Select
                                    	id="skipHoliday"
										forceSelection="false"
										selectedKey="BTC_PROCESS_ALWAYS">
										<items>
											<core:Item key="BTC_DONT_PROCESS_ON_HOLIDAY" text="{i18n>sapSchedNoHoliday}" />
											<core:Item key="BTC_PROCESS_BEFORE_HOLIDAY" text="{i18n>sapSchedBeforeHoliday}" />
											<core:Item key="BTC_PROCESS_AFTER_HOLIDAY" text="{i18n>sapSchedAfterHoliday}" />
											<core:Item key="BTC_PROCESS_ALWAYS" text="{i18n>sapSchedAlways}" />
                                    	</items>
									</Select>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                            	<Button text="{i18n>buttonExecute}" press="scheduleReports"/>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                
            </form:Form>
			<!-- End of first Form -->
			</content>
		</Panel>
		<Panel expandable="true" expanded="true" headerText="Reporting Parameters" width="auto" class="ccPanelBG">
			<content>
				<!-- Beginning of second Form -->
				<form:Form  editable="true">
					<form:layout>
                    <form:ResponsiveGridLayout 
                    	visible="true" 
                		labelSpanL="3" 
                		labelSpanM="4" 
                		labelSpanS="5" 
                		emptySpanL="1" 
                		emptySpanM="0" 
                		emptySpanS="0" 
                		columnsL="3" 
                		columnsM="1" 
                		columnsS="1" 
                		breakpointL="800" 
                		breakpointM="400">
                    </form:ResponsiveGridLayout>
                </form:layout>
                
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="Date As of">
                                <form:fields>
									<DatePicker id="dateAsOf" valueFormat="yyyyMMdd" displayFormat="d MMM y"/>
									<CheckBox id="shiftAsOf" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Date through">
                                <form:fields>
									<DatePicker id="dateRangeFrom" valueFormat="yyyyMMdd" displayFormat="d MMM y"/>
									<CheckBox id="shiftFrom" />
									<DatePicker id="dateRangeTo" valueFormat="yyyyMMdd" displayFormat="d MMM y"/>
									<CheckBox id="shiftTo" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="{i18n>dateType}">
                            	<RadioButtonGroup id="dateType" columns="3" selectedIndex="0">
									<buttons>
										<RadioButton text="periodic"/>
										<RadioButton text="daily"/>
									</buttons>
								</RadioButtonGroup>
                            </form:FormElement>
                            <form:FormElement label="{i18n>companyCodeText}">
                                <form:fields>
									<MultiComboBox
										id="companyCode"
										required="false"
										width="300px"
										items="{/companySet}">
										<core:Item key="{Compcode}" text="{Txtmd}" />
									</MultiComboBox>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="View type">
                                <form:fields>
									<Select
										id="viewType"
										forceSelection="true"
										selectedKey="compact">
										<items>
											<core:Item key="compact" text="Compact" />
											<core:Item key="expanded" text="Expanded" />
										</items>
									</Select>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="Accounting Basis">
                                <form:fields>
                                    <Select
                                    	id="valuationArea"
										forceSelection="true"
										selectedKey="001">
                                    	<items>
											<core:Item key="001" text="US GAAP" />
											<core:Item key="002" text="US STAT" />
											<core:Item key="003" text="US TAX" />
										</items>
									</Select>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="{i18n>securityAccountText}">
                                <form:fields>
                                    <MultiComboBox
										id="securityAccount"
										required="false"
										width="300px"
										items="{/securityAccountSet}">
											<core:Item text="{Cfmsecac} | {Txtmd}" key="{Cfmsecac}"/>
									</MultiComboBox>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Ledger Basis">
                                <form:fields>
                                    <Select
                                    	id="ledgerBasis"
										forceSelection="true"
										selectedKey="0L">
										<items>
											<core:Item key="0L" text="Leading Ledger STAT" />
											<core:Item key="1L" text="GAAP" />
										</items>
									</Select>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="{i18n>generalLedgerAccountText}">
                                <form:fields>
                                    <MultiComboBox
										id="glAccount"
										required="false"
										width="300px"
										items="{/glaccountSet}">
											<core:Item text="{Chrtacct} | {Glaccont}" key="{Glaccont}"/>
									</MultiComboBox>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="NAIC Key Date">
                                <form:fields>
                                    <DatePicker enabled="false" value="Enter Date..." valueFormat="yyyy-MM-dd" displayFormat="short"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="NAIC List Type">
                                <form:fields>
                                    <Select
                                    	enabled="false"
										forceSelection="false">
									</Select>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                
            </form:Form>
			<!-- End of second Form -->	
				
			</content>
		</Panel>
		<Panel
		    width="100%"
		    class="ccPanelBG">
	    	<content>
	    		<!-- Beginning of table -->	
				<Table id="idSchedulingTable"
					items="{path:'/entries'}"
					growing="true"
    				growingThreshold="8">
					<headerToolbar>
						<Toolbar>
							<Title text="Current and future jobs" level="H6"/>
							<ToolbarSpacer></ToolbarSpacer>
							<Button text="Refresh" tooltip="Refresh" icon="sap-icon://refresh" press="handleRefreshButtonPressed"/>
							<Button tooltip="View Settings" icon="sap-icon://drop-down-list" press="handleViewSettingsDialogButtonPressed"/>
						</Toolbar>
					</headerToolbar>
					<infoToolbar>
						<Toolbar
							id="vsdFilterBar"
							active="true"
							visible="false"
							press="[handleViewSettingsDialogFilterBarPressed, views.control.tableViewSettingsDialog]">
							<Label id="vsdFilterLabel" text="?" />
						</Toolbar>
					</infoToolbar>
					<columns>
						<Column width="17em"><Text text="SAP Job Identifier" /></Column>
						<!--<Column minScreenWidth="Large" demandPopin="true" sortProperty="SchedObjName"><Text text="Date" /></Column>
						<Column minScreenWidth="Large" demandPopin="true" sortProperty="SchedDate"><Text text="Next Run" /></Column>-->
						<Column minScreenWidth="1300px" demandPopin="true" popinDisplay="Inline"><Text text="Scheduled Object" /></Column>
						<Column ><Text text="Job Type" /></Column>
						<Column ><Text text="Status" /></Column>
						<Column minScreenWidth="1300px" demandPopin="true" popinDisplay="Inline"><Text text="Next Start Date" /></Column>
						<Column minScreenWidth="1300px" demandPopin="true" popinDisplay="Inline"><Text text="Created at" /></Column>
						<Column minScreenWidth="1300px" ><Text text="Start Type" /></Column>
						<Column minScreenWidth="1300px" ><Text text="ZIP" /></Column>
						<Column ><Text text="Frequency" /></Column>
						<Column minScreenWidth="1300px" demandPopin="true" popinDisplay="Inline"><Text text="NWD Handling" /></Column>
						<Column minScreenWidth="Large" demandPopin="true" popinDisplay="Inline" ><Text text="Job Count" /></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier title="{jobname}" />
								<!--<Text text="{schedDate}"/>
								<Text text="{jobDate}"/>-->
								<Text text="{schedObjNameDesc}"/>
								<Text text="{schedObjTypeDesc}"/>
								<core:Icon
									src="{
										path:'schedStatus',
										formatter:'.formatStatusIcon'
									}"
								/>
								<Text text="{jobDatetime}"/>
								<Text text="{createdAt}"/>
								<Text text="{jobStartTypeDesc}"/>
								<Text text="{jobZip}"/>
								<Text text="{jobPeriodicDesc}"/>
								<Text text="{jobDelayHolidayDesc}"/>
								<Text text="{jobcount}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<!-- End of table -->	
	  		</content>
		</Panel>
		</content>
	</Page>
	
	<!--<Text text="{
			path:'schedDate',
			type: 'sap.ui.model.type.Date',
	        formatOptions: {
				style: 'long'
	        },
	        relative: true
		}"/>
		<Text text="{
			parts: [{path:'jobDate',type: 'sap.ui.model.type.Date'}],
	        formatOptions: {
				style: 'long'
	        }
		}"/>-->
	
</mvc:View>