	<Page
      id="pageSchedulingManageGroups"
      class="html_container imageResponsive"
      showHeader="false">
    	<content>
    		<l:HorizontalLayout class="sapUiContentPadding sapUiSmallMargin  backgroundManage">
    		<l:VerticalLayout
    			width="100%">
    		<form:SimpleForm
    			id="manageGroupsForm"
    			labelSpanXL="12"
    			labelSpanL="12"
    			labelSpanM="12"
    			labelSpanS="12"
    			editable="true"
    			layout="ResponsiveGridLayout"
    			singleContainerFullSize="false"
    			class="ccPanelBG">
    			<form:content>
    				<Label text="{i18n>manageNewGroupName}">
    				</Label>
    				<Input    
    					id="newGrpInput"
    					type="Text"
    					placeholder="{i18n>manageInputPlaceholder}">
    				</Input>
    				<Button text="{i18n>manageSaveNewGroup}" press="handleButtonSavePressed"/>
    				<Label text="{i18n>manageYourGroups}">
    				</Label>
    				<Select
						id="yourGroups"
						forceSelection="true"
						required="true"
						change="groupSelectChange"
						items="{
								path: '/groups'
							}">
						<core:Item key="{groupKey}" text="{groupDesc}" />
					</Select>
					<Button text="{i18n>manageDeleteExistingGroup}" press="handleButtonDeletePressed" />
    			</form:content>
    			
