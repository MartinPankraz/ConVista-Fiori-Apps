            <l:HorizontalLayout class="sapUiSmallMargin">
            	<l:VerticalLayout class="sapUiSmallMarginEnd">
            		<Label text="{i18n>manageReportsSelectedGroup}" class="sapUiTinyMarginBottom"></Label>
            		<l:HorizontalLayout>
            			<ScrollContainer
            				class="selectionList"
            				width="270px"
            				height="200px"
            				horizontal="false"
							vertical="true">
            				<SelectList
								id="reportsSelectedGroup">
							</SelectList>
            			</ScrollContainer>
						<l:VerticalLayout class="sapUiSmallMarginBegin sapUiLargeMarginTop">
							<Button icon="sap-icon://close-command-field" press="deleteFromList"/>
							<Button icon="sap-icon://open-command-field" press="moveGroupReportsToSelectedGroup"/>
						</l:VerticalLayout>
					</l:HorizontalLayout>
					<Label text="{i18n>manageAllAvailableReports}" class="sapUiSmallMarginTop sapUiTinyMarginBottom"></Label>
					<l:HorizontalLayout>
						<ScrollContainer
            				class="selectionList"
            				width="270px"
            				height="290px"
            				horizontal="false"
							vertical="true">
							<SelectList
								id="availableReports"
								items="{
									path: '/reports'
								}">
								<core:Item key="{query}" text="{descr}" />
							</SelectList>
						</ScrollContainer>
						<l:VerticalLayout class="sapUiSmallMarginBegin sapUiLargeMarginTop">
							<Button icon="sap-icon://close-command-field" press="deleteFromList"/>
							<Button icon="sap-icon://open-command-field" press="moveExistingReportsToSelectedGroup"/>
