<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:model="sap.ui.model"
	controllerName="convista.com.arp.demo.controller.schedulingManageGroups" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:form="sap.ui.layout.form" class="sapUiSizeCompact">
	<Page
      id="pageSchedulingManageGroups"
      class="html_container imageResponsive"
      showHeader="false">
    	<content>
    		<l:HorizontalLayout class="sapUiContentPadding sapUiSmallMargin  backgroundManage">
    		<l:VerticalLayout
    			width="100%">
    		<form:SimpleForm
    			id="manageGroupsForm"
    			labelSpanXL="12"
    			labelSpanL="12"
    			labelSpanM="12"
    			labelSpanS="12"
    			editable="true"
    			layout="ResponsiveGridLayout"
    			singleContainerFullSize="false"
    			class="ccPanelBG">
    			<form:content>
    				<Label text="{i18n>manageNewGroupName}">
    				</Label>
    				<Input    
    					id="newGrpInput"
    					type="Text"
    					placeholder="{i18n>manageInputPlaceholder}">
    				</Input>
    				<Button text="{i18n>manageSaveNewGroup}" press="handleButtonSavePressed"/>
    				<Label text="{i18n>manageYourGroups}">
    				</Label>
    				<Select
						id="yourGroups"
						forceSelection="true"
						required="true"
						change="groupSelectChange"
						items="{
								path: '/groups'
							}">
						<core:Item key="{groupKey}" text="{groupDesc}" />
					</Select>
					<Button text="{i18n>manageDeleteExistingGroup}" press="handleButtonDeletePressed" />
    			</form:content>
    			
    		</form:SimpleForm>
    		<Title text="Drag &amp; Drop your reports" class="sapUiSmallMarginBegin  titleScheduleForm" width="95%"></Title>
            <l:HorizontalLayout class="sapUiSmallMargin">
            	<l:VerticalLayout class="sapUiSmallMarginEnd">
            		
            		<Label text="{i18n>manageReportsSelectedGroup}" class="sapUiTinyMarginBottom"></Label>
            		<l:HorizontalLayout>
            			<ScrollContainer
            				id="reportsSelectedGroupContainer"
            				class="selectionList"
            				width="270px"
            				height="200px"
            				horizontal="false"
							vertical="true">
            				<SelectList
								id="reportsSelectedGroup">
							</SelectList>
            			</ScrollContainer>
						<l:VerticalLayout class="sapUiSmallMarginBegin sapUiLargeMarginTop">
							<!--<Button icon="sap-icon://close-command-field" press="deleteFromList"/>
							<Button icon="sap-icon://open-command-field" press="moveGroupReportsToSelectedGroup"/>-->
							<core:Icon src="sap-icon://navigation-left-arrow"/>
							<core:Icon src="sap-icon://navigation-right-arrow" />
						</l:VerticalLayout>
					</l:HorizontalLayout>
					<Label text="{i18n>manageAllAvailableReports}" class="sapUiSmallMarginTop sapUiTinyMarginBottom"></Label>
					<l:HorizontalLayout>
						<ScrollContainer
							id="availableReportsContainer"
            				class="selectionList"
            				width="270px"
            				height="290px"
            				horizontal="false"
							vertical="true">
							<SelectList
								id="availableReports"
								items="{
									path: '/reports'
								}">
								<core:Item
									text="{descr}"
									key="{query}"/>
							</SelectList>
						</ScrollContainer>
						<l:VerticalLayout class="sapUiSmallMarginBegin sapUiLargeMarginTop">
							<!--<Button icon="sap-icon://close-command-field" press="deleteFromList"/>
							<Button icon="sap-icon://open-command-field" press="moveExistingReportsToSelectedGroup"/>-->
							<core:Icon src="sap-icon://navigation-left-arrow"/>
							<core:Icon src="sap-icon://navigation-right-arrow" />
						</l:VerticalLayout>
					</l:HorizontalLayout>
            	</l:VerticalLayout>
            	<l:VerticalLayout>
            		<Label text="{i18n>manageSelectedReports}" class="sapUiTinyMarginBottom"></Label>
            		<ScrollContainer
            				id = "selectedReportsContainer"
            				class="selectionList"
            				width="270px"
            				height="534px"
            				horizontal="false"
							vertical="true">
		            	<SelectList id="selectedReports" >
		            	</SelectList>	
					</ScrollContainer>
				</l:VerticalLayout>
            </l:HorizontalLayout>
            </l:VerticalLayout>
            </l:HorizontalLayout>
  		</content>
	</Page>
</mvc:View>