	<Panel
	    width="100%"
	    class="ccPanelBG">
    	<content>
			<Table id="idManageProducts"
				items="{path:'/entries'}"
				height="100%">
				<headerToolbar>
					<Toolbar>
						<Title text="Current and future jobs" level="H6"/>
						<ToolbarSpacer></ToolbarSpacer>
						<Button text="Refresh" tooltip="Refresh" icon="sap-icon://refresh" press="handleRefreshButtonPressed"/>
						<Button tooltip="View Settings" icon="sap-icon://drop-down-list" press="handleViewSettingsDialogButtonPressed"/>
					</Toolbar>
				</headerToolbar>
				<infoToolbar>
					<Toolbar
						active="true"
						visible="false"
						press="[handleViewSettingsDialogFilterBarPressed, views.control.tableViewSettingsDialog]">
						<Label id="vsdFilterLabel" text="?" />
					</Toolbar>
				</infoToolbar>
				<columns>
					<Column width="18em"><Text text="SAP Job Identifier" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" sortProperty="SchedObjName"><Text text="Date" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" sortProperty="SchedDate"><Text text="Next Run" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Scheduled Object" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Job Type" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Status" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Next Start Date" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Created at" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Start Type" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="ZIP" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Frequency" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="NWD Handling" /></Column>
					<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Job Count" /></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{schedObjName}" text="{jobname}" />
							<Text text="{schedDate}"/>
							<Text text="{jobDate}"/>
							<Text text="{schedObjNameDesc}"/>
							<Text text="{schedObjTypeDesc}"/>
							<core:Icon
								src="{
									path:'schedStatus',
									formatter:'.formatStatusIcon'
								}"
							/>
							<Text text="{schedObjNameDesc}"/>
							<Text text="{jobDatetime}"/>
							<Text text="{createdAt}"/>
							<Text text="{jobStartTypeDesc}"/>
							<Text text="{jobZip}"/>
							<Text text="{jobPeriodicDesc}"/>
							<Text text="{jobDelayHolidayDesc}"/>
							<Text text="{jobcount}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
  		</content>
	</Panel>
	
