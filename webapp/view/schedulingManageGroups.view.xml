<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:model="sap.ui.model"
	controllerName="convista.com.arp.demo.controller.schedulingManageGroups" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:form="sap.ui.layout.form" class="sapUiSizeCompact">
	<Page
      id="pageSchedulingManageGroups"
      class="html_container"
      showHeader="false">
		
		<Panel
	    width="50%"
	    class="ccPanelBG">
    	<content>
    		<l:VerticalLayout>
    		<form:Form 
					id="manageGroupsForm"
					editable="true">
					<form:layout>
                    <form:ResponsiveGridLayout 
                    	visible="true" 
                		labelSpanL="4" 
                		labelSpanM="4" 
                		labelSpanS="12" 
                		emptySpanL="0" 
                		emptySpanM="0" 
                		emptySpanS="0" 
                		columnsL="3" 
                		columnsM="2" 
                		columnsS="1" 
                		breakpointL="800" 
                		breakpointM="500">
                    </form:ResponsiveGridLayout>
                </form:layout>
                
                 <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="{i18n>manageNewGroupName}">
                                <form:fields>
									<Input 
										type="Text"
										placeholder="Enter group name ..." />
										<Button text="Save as new Group" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="{i18n>manageYourGroups}">
                                <form:fields>
									<Select
										id="yourGroups"
										forceSelection="true"
										selectedKey="0L"
										required="true"
										width="300px">
										<items>
											<core:Item key="0L" text="Leading Ledger STAT" />
											<core:Item key="1L" text="GAAP" />
										</items>
									</Select>
									<Button text="Delete Existing Group" />
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                
            </form:Form>
            
            <l:HorizontalLayout>
            	<l:VerticalLayout>
            		<SelectList
						items="{
							path: '/entries'
						}">
						<core:Item key="{schedObjName}" text="{jobname}" />
					</SelectList>
					<SelectList
						items="{
							path: '/entries'
						}">
						<core:Item key="{schedObjName}" text="{jobname}" />
					</SelectList>
            	</l:VerticalLayout>
	            	<SelectList
						items="{
							path: '/entries'
						}">
						<core:Item key="{schedObjName}" text="{jobname}" />
					</SelectList>
            </l:HorizontalLayout>
            </l:VerticalLayout>
  		</content>
	</Panel>
		
	
	</Page>
</mvc:View>