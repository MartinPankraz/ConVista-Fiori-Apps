<mvc:View controllerName="convista.com.controller.Navigation" xmlns:html="http://www.w3.org/1999/xhtml"  xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<IconTabBar
						id="idIconTabBarFiori1"
						upperCase="true"
						expanded="false"
						class="sapUiResponsiveContentPadding"
						select="handleIconTabBarSelect">
					</IconTabBar>
					<l:HorizontalLayout id="layout_horizontal_sideNav" class="sapUiSmallMargin" >
						<l:VerticalLayout id="layout_vertical_sideNav" class="sapUiSmallMargin" >
							<Button text=""
				              icon="sap-icon://navigation-left-arrow"
				              class="SapUiSmallMargin"
				              tooltip="Show/hide reports"
				              press="onCollapseExapandPress" />
							<tnt:SideNavigation id="sideNavigation" expanded="true">
						        <tnt:item>
						            <tnt:NavigationList id="navigationList">
						                <tnt:NavigationListItem
						                        text="{text}"
						                        icon="{icon}">
						                </tnt:NavigationListItem>
					                </tnt:NavigationList>
						        </tnt:item>
						    </tnt:SideNavigation>
					    </l:VerticalLayout>
					    <core:HTML id="html">
						</core:HTML>
					</l:HorizontalLayout>
				</content>
				<footer>
					<Toolbar>
						<content>
							<Text class="sapUiSmallMarginBeginEnd" text="2016 ConVista Consulting AG"/>
						</content>
					</Toolbar>
				</footer>	
			</Page>
		</pages>
	</App>
</mvc:View>