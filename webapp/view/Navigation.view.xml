<mvc:View controllerName="convista.com.controller.Navigation" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<IconTabBar
						id="idIconTabBarFiori1"
						upperCase="true"
						expanded="{device>/isNoPhone}"
						class="sapUiResponsiveContentPadding"
						select="handleIconTabBarSelect">
						<items>
							<IconTabFilter text="dummy1"/>
							<IconTabFilter text="dummy2"/>
						</items>
					</IconTabBar>
					 <Button text=""
		              icon="sap-icon://navigation-right-arrow"
		              class="SapUiSmallMargin"
		              press="onCollapseExapandPress" />
					<tnt:SideNavigation id="sideNavigation" expanded="false">
				        <tnt:item>
				            <tnt:NavigationList id="navigationList">
				                <tnt:NavigationListItem
				                        text="{text}"
				                        icon="{icon}">
				                </tnt:NavigationListItem>
			                </tnt:NavigationList>
				        </tnt:item>
				    </tnt:SideNavigation>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>