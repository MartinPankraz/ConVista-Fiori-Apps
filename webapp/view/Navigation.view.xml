<mvc:View controllerName="convista.com.controller.Navigation" xmlns:html="http://www.w3.org/1999/xhtml"  xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt" >
	<App>
		<pages>
			<Page showHeader="false"
				  title="{i18n>title}">
				<content>
					<Bar class="ccMBar">
						<contentLeft>
							<IconTabBar
								id="idIconTabBarFiori1"
								upperCase="true"
								expanded="true"
								class="sapUiResponsiveContentPadding"
								select="handleIconTabBarSelect">
							</IconTabBar>
						</contentLeft>
						<contentRight>
							<l:VerticalLayout id="layout_vertical_clock" class="sapUiSmallMargin">
								<!--<Image
									id="userimage"
									src="./css/images/MPankraz.jpg"
									densityAware="false"
									width="50px"
									height="50px"
									class="roundedIcons"
									press="onUserImagePressed">
								</Image>-->
								<core:Icon src="sap-icon://favorite"
									color="yellow"
									width="50px"
									height="50px"
									class="roundedIcons"
									press="onUserImagePressed"/>
								<Text id="username" text="{userapi>/firstName}, {userapi>/lastName}"/>
								<Text id="clock1" text="KÃ¶ln 11:11 am"/>
							</l:VerticalLayout>
						</contentRight>
					</Bar>
					<l:HorizontalLayout id="layout_horizontal_sideNav" class="sapUiSmallMargin" >
						<l:VerticalLayout id="layout_vertical_sideNav" class="sapUiSmallMargin" width="100%">
							<Button text=""
				              icon="sap-icon://navigation-right-arrow"
				              class="SapUiSmallMargin"
				              tooltip="Show/hide reports"
				              press="onCollapseExapandPress" />
							<tnt:SideNavigation id="sideNavigation" expanded="false">
						        <tnt:item>
						            <tnt:NavigationList id="navigationList">
						                <tnt:NavigationListItem
						                        text="{text}"
						                        icon="{icon}">
						                </tnt:NavigationListItem>
					                </tnt:NavigationList>
						        </tnt:item>
						    </tnt:SideNavigation>
					    </l:VerticalLayout>
					    <core:HTML id="html"/>
					</l:HorizontalLayout>
				</content>
				<footer>
					<Bar>
						<contentLeft>
							<Text class="sapUiSmallMarginBeginEnd" text="2016 ConVista Consulting AG"/>
						</contentLeft>
						<contentRight>
							<Image
								src="./css/images/sap_logo.png"
								densityAware="false"
								width="60px">
							</Image>
						</contentRight>
					</Bar>
				</footer>	
			</Page>
		</pages>
	</App>
</mvc:View>