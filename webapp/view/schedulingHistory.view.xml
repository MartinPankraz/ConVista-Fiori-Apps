<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:model="sap.ui.model"
	controllerName="convista.com.arp.demo.controller.schedulingHistory" xmlns:html="http://www.w3.org/1999/xhtml" class="sapUiSizeCompact">
	<Page
      id="pageSchedulingHistory"
      class="html_container"
      showHeader="false">
	<Panel
	    width="100%"
	    class="ccPanelBG">
    	<content>
			<Table id="idSchedulingHistoryTable"
				items="{path:'/entries'}">
				<headerToolbar>
					<Toolbar>
						<Title text="Job History" level="H6"/>
						<ToolbarSpacer></ToolbarSpacer>
						<Button text="Refresh" tooltip="Refresh" icon="sap-icon://refresh" press="handleRefreshButtonPressed"/>
						<Button tooltip="View Settings" icon="sap-icon://drop-down-list" press="handleViewSettingsDialogButtonPressed"/>
					</Toolbar>
				</headerToolbar>
				<infoToolbar>
					<Toolbar
						id="vsdFilterBar"
						active="true"
						visible="false"
						press="[handleViewSettingsDialogFilterBarPressed, views.control.tableViewSettingsDialog]">
						<Label id="vsdFilterLabel" text="?" />
					</Toolbar>
				</infoToolbar>
				<columns>
					<Column width="18em"><Text text="SAP Job Identifier" /></Column>
					<Column minScreenWidth="Large" demandPopin="true" sortProperty="SchedObjName">
							<Text text="Scheduled Object Name" />
					</Column>
					<Column minScreenWidth="Large" demandPopin="true" sortProperty="SchedDate">
						<Text text="Job Type" />
					</Column>
					<Column minScreenWidth="Large" demandPopin="true">
						<Text text="Status" />
					</Column>
					<Column minScreenWidth="Large" demandPopin="true">
						<Text text="Date" />
					</Column>
					<Column minScreenWidth="Large" demandPopin="true">
						<Text text="Start Type" />
					</Column>
					<Column minScreenWidth="Large" demandPopin="true">
						<Text text="Frequency" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{jobname}"/>
							<Text text="{schedObjName}"/>
							<Text text="{schedObjTypeDesc}"/>
							<core:Icon
								src="{
									path:'schedStatus',
									formatter:'.formatStatusIcon'
								}"
							/>
							<Text text="{jobDatetime}"/>
							<Text text="{jobStartTypeDesc}"/>
							<Text text="{jobPeriodicDesc}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
  		</content>
	</Panel>
	
	<!--<Text text="{
			path:'schedDate',
			type: 'sap.ui.model.type.Date',
	        formatOptions: {
				style: 'long'
	        },
	        relative: true
		}"/>
		<Text text="{
			parts: [{path:'jobDate',type: 'sap.ui.model.type.Date'}],
	        formatOptions: {
				style: 'long'
	        }
		}"/>-->
	</Page>
</mvc:View>